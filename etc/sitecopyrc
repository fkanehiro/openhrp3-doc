site OpenHRP3
  server www.is.aist.go.jp
  protocol ftp
  username humanoid
  password humanoid
  remote ~/public_html/OpenHRP
  local ~/website/OpenHRP3
  url http://www.is.aist.go.jp/humanoid/OpenHRP
  nodelete
  permissions all
  symlinks follow
  exclude /download
  exclude /limited_jp
  exclude /etc
  exclude /tmp
  exclude /.htaccess
  exclude *.rb
  exclude *.block
  exclude .svn


